SET PASSWORD FOR root@'localhost' = 'Password';
SET PASSWORD FOR root@'localhost' = PASSWORD(C'Password');
USE mysql
UPDATE user SET Password = PASSWORD('newpwd')
WHERE Host = 'localhost' AND User = 'root';
UPDATE user SET Password = PASSWORD('newpwd') WHERE Host = 'localhost' AND User = 'root';
UPDATE user SET Password = PASSWORD('newpwd') WHERE Host = 'localhost' AND User = 'Password';
/q
USE mysql
UPDATE user SET Password = PASSWORD('newpwd')
WHERE Host = 'localhost' AND User = 'root';
/q USE mysql UPDATE user SET Password = PASSWORD('newpwd') WHERE Host = 'localhost' AND User = 'root';
\q
CREATE USER 'admin'@'localhost' IDENTIFIED BY 'some_pass';
CREATE USER 'root'@'localhost' IDENTIFIED BY 'root';
